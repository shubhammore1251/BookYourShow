generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  emailVerified Boolean?  @default(false)
  accounts      Account[]
  bookings      Booking[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Theater {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  city      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   String
  screens   Screen[]
}

model Screen {
  id         Int     @id @default(autoincrement())
  name       String
  type       Json    @db.Json
  totalSeats Int
  theaterId  Int
  theater    Theater @relation(fields: [theaterId], references: [id])
  shows      Show[]
}

model Show {
  id          Int       @id @default(autoincrement())
  movieId     Int
  language    String
  date        DateTime
  startTime   String
  endTime     String?
  screenId    Int
  price       Float
  seatsFilled Int       @default(0)
  totalSeats  Int
  bookings    Booking[]
  screen      Screen    @relation(fields: [screenId], references: [id])
}

model Booking {
  id          Int           @id @default(autoincrement())
  showId      Int
  seatsBooked Int
  userId      String
  createdAt   DateTime      @default(now())
  status      BookingStatus @default(CONFIRMED)
  updatedAt   DateTime      @updatedAt
  show        Show          @relation(fields: [showId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  REFUNDED
}
